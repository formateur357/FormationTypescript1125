{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Compile current TS",
      "runtimeExecutable": "npx",
      "runtimeArgs": [
        "tsc",
        "--outDir",
        "${fileDirname}",
        "${fileBasenameNoExtension}.ts"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "preLaunchTask": null,
      "presentation": {
        "hidden": false,
        "group": "ts"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run current JS",
      "program": "${fileDirname}/${fileBasenameNoExtension}.js",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "presentation": {
        "hidden": false,
        "group": "ts"
      }
    }
  ]
}
